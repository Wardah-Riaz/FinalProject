-# This file is app/view/movies/index.html.haml
%h1 All Movies

-# Adding ratings code from pastebin here.
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", rating, ((@checked_ratings.grep(/^#{rating}$/).length>0 ) || (@checked_ratings.length==0))
  = hidden_field_tag "sort", "#{params[:sort]}" 
  = submit_tag 'Refresh', :id => "ratings_submit"
  
  
%table#movies
  %thead
    %tr
      - if params[:sort] != 'title'
        %th= link_to "Movie Title", movies_path({:sort => 'title', :ratingFilter => @checked_ratings.to_s}) , :id => "title_header"
      - elsif params[:sort] == 'title'
        %th.hilite= link_to "Movie Title", movies_path({:sort => 'title', :ratingFilter => @checked_ratings.to_s}) , :id => "title_header"
      - if params[:sort] != 'rating'
        %th=link_to "Rating", movies_path({:sort => 'rating', :ratingFilter => @checked_ratings.to_s}), :id => "rating_header"
      - elsif params[:sort] == 'rating'
        %th.hilite=link_to "Rating", movies_path({:sort => 'rating', :ratingFilter => @checked_ratings.to_s}), :id => "rating_header"
      - if params[:sort] != 'release_date'
        %th=link_to "Release Date", movies_path({:sort => 'release_date', :ratingFilter => @checked_ratings.to_s}) , :id => "release_date_header"
      - elsif params[:sort] == 'release_date'
        %th.hilite=link_to "Release Date", movies_path({:sort => 'release_date', :ratingFilter => @checked_ratings.to_s}) , :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
